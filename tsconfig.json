{
  "compilerOptions": {
    "outDir": ".", // prevents this tsconfig from compiling any files
    // we want subprojects to inherit these options:
    "target": "es5", 
    "module": "commonjs", 
    "strict": true,
  },
  // configure this project to build all of the following:
  "references": [
    { "path": "./src" }
  ],
  "include": ["package.json"]
}